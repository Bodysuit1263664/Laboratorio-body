#!/usr/bin/bash
# This file contain all i-Haklab enviroment variables
OP1=${2:-crunch}

export iHAKLAB=/data/data/com.termux/files/usr/share/i-Haklab
microSD=$(df|tail -n 2|awk -F " " '{print $6}'|grep -iv "emulated")
if [ -d $microSD/Android/data/com.termux/files ] && [ -w $microSD/Android/data/com.termux/files ]; then
	if [ ! -d $microSD/Android/data/com.termux/files/tools ];then
		mkdir $microSD/Android/data/com.termux/files/tools
	fi
	export TOOLS=$microSD/Android/data/com.termux/files/tools
elif [ -d /data/data/com.termux/files/usr/share/tools ];then
	export TOOLS=/data/data/com.termux/files/usr/share/tools
else
	mkdir -p /data/data/com.termux/files/usr/share/tools
	export TOOLS=/data/data/com.termux/files/usr/share/tools
fi

export R='\033[1;31m'
export G='\033[1;32m'
export Goke='\033[92m'
export Glig=='\e[1;32m'
export Y='\033[1;33m'
export B='\033[1;34m'
export M='\033[1;35m'
export C='\033[1;36m'
export W='\033[0m'
export ARCH=$(dpkg --print-architecture)
export iHDB="https://raw.githubusercontent.com/ivam3/i-Haklab/master/.set"
export JAVADB="https://raw.githubusercontent.com/ivam3/java/master"
export LOCALHOST=$(ifconfig wlan0 | grep -oE '([0-9]{1,3}\.){3}[0-9]{1,3}' | grep -v 255)
export LPORT="4546"
export MSFPATH=$PREFIX/opt/metasploit-framework
export README_TOOL=$(ls $iHAKLAB/.set/libexec/Tools/Readme/ | grep $OP1)
export RPORT="80"
export SSH=$(netstat | grep -c "ssh")
export TARGET=(0 1 2 3 29)
export UNAME=$(uname -m)

